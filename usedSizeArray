#include<stdio.h>
#include<stdlib.h>



void display(int arr[],int usedSize)
{
    for(int i=0;i<usedSize;i++)
    {
        printf("%d \n",arr[i]);
    }
}

int usedArray(int arr[],int arraySize)
{
    int size=0;
    
    for(int i=0; i<arraySize; i++)
    {
        if(arr[i]!=0)
        {
            size+=1;
        }
    }

    return size;
    
}

int main()
{
    int arr[100]={2,4,5,1,3,4};
    int usedSize=sizeof(arr)/sizeof(arr[0]);
    printf("%d\n",usedArray(arr,(sizeof(arr)/sizeof(int)))); //size of int is depend on your architecture.2/4
    
    display(arr,usedArray(arr,(sizeof(arr)/sizeof(int))));
}
